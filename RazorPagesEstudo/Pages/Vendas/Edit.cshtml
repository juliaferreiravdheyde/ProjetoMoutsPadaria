@page
@model RazorPagesEstudo.Pages.Vendas.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Venda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Venda.Id" />
            <div class="form-group">
                <label asp-for="Venda.FormaPagamento" class="control-label"></label>
                <input asp-for="Venda.FormaPagamento" class="form-control" />
                <span asp-validation-for="Venda.FormaPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venda.Total" class="control-label"></label>
                <input asp-for="Venda.Total" class="form-control" />
                <span asp-validation-for="Venda.Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venda.ClienteID" class="control-label"></label>
                <select asp-for="Venda.ClienteID" class="form-control" asp-items="ViewBag.ClienteID"></select>
                <span asp-validation-for="Venda.ClienteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
